<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.jboss.cl</groupId>
    <artifactId>jboss-cl-parent</artifactId>
    <version>2.2.0.M1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jboss.cl</groupId>
  <artifactId>jboss-cl</artifactId>
  <packaging>pom</packaging>
  <name>JBoss ClassLoader Distribution</name>
  <url>http://www.jboss.com/products/jbossmc</url>
  <description>JBoss ClassLoader Distribution</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-2</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <finalName>jboss-cl-${project.version}</finalName>
              <descriptors>
                <descriptor>src/assembly/dist.xml</descriptor>
                <descriptor>src/assembly/dist-with-deps.xml</descriptor>
                <descriptor>src/assembly/src.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
  <dependencies>
    <dependency>
      <groupId>org.jboss.cl</groupId>
      <artifactId>jboss-classloader</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.cl</groupId>
      <artifactId>jboss-classloading</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.cl</groupId>
      <artifactId>jboss-classloading-vfs</artifactId>
    </dependency>
  </dependencies>
  
</project>